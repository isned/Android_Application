    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="itbs.sem2.friendslocationv1.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="itbs.sem2.friendslocationv1.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />
        <action
        android:id="@+id/action_galleryFragment_to_homeFragment"
        app:destination="@id/nav_home" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="itbs.sem2.friendslocationv1.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
